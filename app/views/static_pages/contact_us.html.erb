<div class="row">
  <div class="col-md-offset-3 col-md-6 col-xs-12">
    <h4>Contact Us</h4>
    <table class="table">
      <% ContactUs::DATA.each do |tuple| %>
      <tr>
        <td>
          <%= mail_to tuple[0] %>
        <td>
        <td>
          <%= tuple[1].html_safe %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
