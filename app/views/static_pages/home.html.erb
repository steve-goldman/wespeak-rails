<div class="row">
  <div class="col-md-offset-3 col-md-6 col-xs-12">
    <% if !logged_in? %>
      <h1>Welcome to WeSpeak</h1>
      <h2>A Social Network for Groups</h2>
      <%= render 'users/signup' %>
    <% else %>
      <div id="tabbed-content">
        <h2>Your Feed</h2>
        <% if @statements %>
        <%= render 'tabbed_content' %>
        <% else %>
        <h4 align="center">You're not following any groups!</h4>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
