<div class="new-profile_image">
  <h4>Profile Image Proposal</h4>

  <div class="row">
    <div class="col-md-6 col-xs-12">
      <%= form_for(:profile_image, url: create_profile_image_path(@info.group.name), html: { multipart: true }) do |f| %>
        <%= file_field_tag :image, accept: 'image/jpeg,image/gif,image/png' %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
