<div class="signup">
  <%= form_for(:user, url: create_user_path) do |f| %>

  <%= f.label :name, "User Name (other users will see this)" %>
  <%= f.text_field :name, placeholder: "User Name", class: "form-control" %>
  
  <%= f.label :email, "Email Address (no one will see this)" %>
  <%= f.email_field :email, placeholder: "Email Address", class: "form-control" %>
  
  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
  
  <%= f.label :password_confirmation, "Re-enter Password" %>
  <%= f.password_field :password_confirmation, placeholder: "Re-enter Password", class: "form-control" %>
  
  <%= f.submit "Sign up", class: "btn btn-primary" %>
  <% end %>
</div>
