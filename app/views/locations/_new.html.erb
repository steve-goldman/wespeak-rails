<div class="new-location">
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <p>
        <%= form_for(:location, url: create_locations_path(@info.group.name)) do |f| %>
        <%= render 'groups/locations_fields', f: f, button_text: "Propose" %>
        <% end %>
      </p>

      <% if @info.group.radius %>
      <p>
        <%= form_for(:rem_location, url: rem_locations_path(@info.group.name)) do |f| %>
        <div><%= f.label :remove_location, "Remove Location Restriction" %></div>
        <div><%= f.submit "Propose", class: "btn btn-primary" %></div>
        <% end %>
      </p>
      <% end %>
    </div>
  </div>
</div>
