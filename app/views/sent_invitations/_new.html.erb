<%= form_for :sent_invitation, url: sent_invitations_path(@info.group.name) do |f| %>
<p><span class="invites-remaining"><%= @info.invitations_remaining %></span> invitation<%= @info.invitations_remaining != 1 ? "s" : "" %> left today</p>
  <% if @info.invitations_remaining > 0 %>
    <%= f.email_field :email, placeholder: "Email Address", class: "form-control" %>
    <%= f.submit "Invite", class: "btn btn-primary" %>
  <% end %>
<% end %>
