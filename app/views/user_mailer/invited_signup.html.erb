<%= stylesheet_link_tag("application.css") %>

<div class="row">
  <div class="col-md-6 col-xs-12">
    <div class="email-body">
      
      <p>Dear future WeSpeak user,</p>
      
      <p>
        You have been invited to join
        <span class="group-name">@<%= @group.name %></span>.
      </p>

      <p>
        <ul id="groups-list" class="list-group groups-list">
          <%= render 'group_pages/group_rows', groups: [@group] %>
        </ul>
      </p>
      
      <p>
        Click here to sign up.  The invitation will be there waiting.
      </p>

      <p>
        <%= link_to "Sign up!", new_user_url, class: "btn btn-success" %>
      </p>
      
      <%= render 'mailer_footer' %>
      
    </div>
  </div>
</div>
