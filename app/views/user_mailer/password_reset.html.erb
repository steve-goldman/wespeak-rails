<%= stylesheet_link_tag("application.css") %>

<div class="row">
  <div class="col-md-6 col-xs-12">
    <div class="email-body">
      
      <p>Dear WeSpeak member,</p>
      
      <p>
        Please click the following link to reset your password.  If you did
        not request this, please ignore this message.
      </p>
      
      <p>
        <%= link_to "Reset Password", edit_password_reset_url(@user.password_reset_token, password_reset: { email: @email }), class: "btn btn-success" %>
      </p>
      
      <p>This link will expire in <%= Constants::ExpirationTimes::PASSWORD_RESET_EXPIRATION_HOURS %> hours.</p>
      
      <%= render 'mailer_footer' %>
      
    </div>
  </div>
</div>
