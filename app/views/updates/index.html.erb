<% provide(:title, @info.group.name) %>
<% provide(:active_tab, :proposals) %>
<div class="row">
  <div class="col-md-3 col-xs-12">
    <%= render 'group_pages/left_header' %>
  </div>
  <div class="col-md-9 col-xs-12">
    <%= render 'group_pages/statement_tabs', page: :proposals, state: :alive, active_tab: :updates %>
    <% if @info.change_eligible? %>
      <%= render 'updates/new' %>
    <% end %>
    <%= render 'updates/index' %>
  </div>
</div>
