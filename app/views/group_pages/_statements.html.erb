<% @statements.each do |statement| %>
<li class="statement-item list-group-item">
  <div class="statement-header">
    <%= render('group_pages/statement_header', statement: statement, group: group) %>
  </div>
  <div class="statement">
    <div class="row">
      <div class="col-xs-3">
        <%= render 'group_pages/group_thumb', statement: statement %>
      </div>

      <div class="col-xs-9">
        <%= render "#{statement.statement.statement_tab}/show", statement: statement, group: group %>
        
        <div class="statement-stats">
          <%= render('group_pages/statement_stats', section: :footer, statement: statement, group: group) %>
        </div>
      </div>
    </div>
  </div>
  <div class="statement-footer">
    <%= render('group_pages/statement_footer', statement: statement, group: group) %>
  </div>
</li>
<% end %>
