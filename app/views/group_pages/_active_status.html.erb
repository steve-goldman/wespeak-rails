<% if logged_in? %>
<div class="settings-group">
  <h4>Active Status</h4>
  <% if @info.active_member %>
    <p class="green-light">Yes!</p>
    <p>Since <%= time_ago_in_words(@info.active_member.created_at) %> ago</p>
    <p>Valid for <%= time_ago_in_words(@info.active_member.expires_at) %></p>
    <p><%= link_to "Discontinue membership", deactivate_membership_path(@info.group.name), method: :delete %></p>
  <% else %>
    <p class="red-light">No.</p>
  <% end %>
  <% if @info.member_history && @info.change_eligible? %>
    <p><%= link_to "Extend membership", activate_membership_path(@info.group.name), method: :post %></p>
  <% end %>
</div>
<% end %>
