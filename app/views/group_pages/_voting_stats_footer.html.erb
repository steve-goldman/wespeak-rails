<% if @info.vote_eligible?(statement) %>
<div id="vote-buttons-<%= statement.id %>">
  <%= render 'group_pages/vote_buttons', statement: statement %>
</div>
<% else %>
<ul align="center">
  <li>
    <% if @info.user %>
      Not eligible to vote
      <span class="why-not">
        <%= link_to "Why not?", why_not_vote_eligible_path(@info.group.name, statement.id) %>
      </span>
    <% else %>
      Log in to vote for this statement
    <% end %>
  </li>
</ul>
<% end %>
