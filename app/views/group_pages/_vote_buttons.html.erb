<% vote = statement.user_vote(@info.user) %>

<% if vote %>
<p class="your-vote">
  You voted:
  <% if vote.vote == Constants::Votes::NO %>
    <span class="no">NO</span>
  <% else %>
    <span class="yes">YES</span>
  <% end %>
</p>
<% else %>
<table>
  <tr>
    <td>
      <%= button_to "No.", vote_no_path(@info.group.name),
          params: { statement_id: statement.id },
          class: "btn btn-danger",
          disabled: !vote.nil? && vote.vote == Constants::Votes::NO,
          data: { confirm: "Are you sure? You cannot change your vote later." },
          remote: true %>
    </td>

    <td>
      <%= button_to "Yes!", vote_yes_path(@info.group.name),
          params: { statement_id: statement.id },
          class: "btn btn-success",
          disabled: !vote.nil? && vote.vote == Constants::Votes::YES,
          data: { confirm: "Are you sure?  You cannot change your vote later." },
          remote: true %>
    </td>
  </tr>
</table>
<% end %>
