<% provide(:title, @info.group.name) %>
<div class="row">
  <div class="col-md-offset-3 col-md-6 col-xs-12">
    <p>
      <%= link_to "Back to #{@info.group.name}", group_profile_path(@info.group.name) %>
    </p>
    <h4>Preview</h4>
    <div class="statement">
      <%= render "#{@statement_tab}/show", statement: @statement.get_content %>
    </div>
    <table class="confirm-buttons">
      <tr>
        <td>
          <%= button_to "Discard", discarded_statement_path(@info.group.name),
              params: { id: @statement.id },
              class: "btn btn-danger" %>
        </td>
        
        <td>
          <%= button_to "Confirm!", confirmed_statement_path(@info.group.name),
              params: { id: @statement.id },
              class: "btn btn-success" %>
        </td>
      </tr>
    </table>
  </div>
</div>
