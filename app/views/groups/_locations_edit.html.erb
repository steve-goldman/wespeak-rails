<%= render 'groups/locations_show', group: @group, change_link: false %>

<%= form_for @group, url: update_locations_group_path(@group.id), method: :patch do |f| %>

<%= f.label :latitude, "Latitude" %>
<%= f.text_field :latitude, placeholder: "Latitude", class: "form-control" %>

<%= f.label :latitude, "Longitude" %>
<%= f.text_field :longitude, placeholder: "Longitude", class: "form-control" %>

<%= f.label :radius, "Radius (miles)" %>
<%= f.select(:radius, options_for_select(Constants::Locations::INPUT_OPTIONS, @group.radius), class: "form-control") %>

<%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
