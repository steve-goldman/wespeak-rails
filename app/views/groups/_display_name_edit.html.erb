<%= form_for :display_name, url: update_display_name_group_path(@group.id), method: :patch do |f| %>
<%= f.text_field(:display_name, maxlength: Constants::Lengths::GROUP_DISPLAY_NAME_MAX, value: @group.display_name, class: "form-control") %>
<%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
