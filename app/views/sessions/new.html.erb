<% provide(:title, "Log In") %>

<% if !logged_in? %>
  <div class="row">
    <div class="col-md-offset-4 col-md-4 col-xs-12">
      <%= render 'login' %>
    </div>
  </div>
<% else %>
  <p>Please <%= link_to "Log out", destroy_session_path, method: :delete %> if you want to log in as a different user.</p>
<% end %>

