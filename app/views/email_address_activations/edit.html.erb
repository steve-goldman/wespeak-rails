<% provide(:title, "Email Address Activation") %>

<h2>Email Address Activation</h2>

<div class="row">
  <div class="col-md-offset-4 col-md-4 col-xs-12">
    <%= form_for(:activation, url: email_address_activation_path, method: "patch") do |f| %>
    
    <%= hidden_field_tag :id, @activation_token %>
    
    <%= hidden_field_tag :email, @email_address.email %>
    
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
    
    <%= f.submit "Activate", class: "btn btn-primary" %>
    
    <% end %>
  </div>
</div>
