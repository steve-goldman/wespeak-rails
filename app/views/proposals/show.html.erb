<% provide(:title, @info.group.name) %>
<div class="row">
  <div class="col-md-offset-3 col-md-6 col-xs-12">
    <% if @feed %>
    <p>
      <%= link_to "Back to your feed",           root_path %>
    </p>
    <% end %>
    <p>
      <%= link_to "Back to #{@info.group.name}", group_profile_path(@info.group.name) %>
    </p>
    <% statement = @statement_pointer[:content].statement %>
    <ul class="list-group">
      <li class="statement-item list-group-item">
        <div class="statement-header">
          <%= render('group_pages/statement_stats', section: :header, statement: statement, group: @info.group) %>
        </div>
        <div class="statement">
          <%= render 'group_pages/statement_pointer', statement_pointer: @statement_pointer, group: @info.group %>
        </div>
        <div class="statement-footer">
          <%= render('group_pages/statement_stats', section: :footer, statement: statement, group: @info.group) %>
        </div>
      </li>
    </ul>
  </div>
</div>
