<h4>
  Initial Group Settings
</h4>

<ul class="list-group">
  <li class="list-group-item">
    <h4>Group Name</h4>
     __NAME_HERE___
  </li>
  <li class="list-group-item">
    <h4>Tagline</h4>
    <% if statement.tagline %>
    "<%= statement.tagline %>"
    <% else %>
    None
    <% end %>
  </li>
  <li class="list-group-item">
    <h4>Profile Image</h4>
    __IMAGE_HERE__.
  </li>
  <li class="list-group-item">
    <h4>Email Addresses</h4>
    <% if statement.initial_group_email_domains.any? %>
    <ul class="list-group">
      <% statement.initial_group_email_domains.each do |initial_group_email_domain| %>
      <li class="list-group-item"><%= initial_group_email_domain.group_email_domain.domain %></li>
      <% end %>
    </ul>
    <% else %>
      None
    <% end %>
  </li>
  <li class="list-group-item">
    <h4>Locations</h4>
    <%= render 'groups/locations_show', latitude: statement.latitude, longitude: statement.longitude, radius: statement.radius, change_link: false %>
  </li>
  <li class="list-group-item">
    <h4>Invitations</h4>
    <%= render 'groups/invitations_show', group: statement, change_link: false %>
  </li>
  <%= render 'groups/rules_show', group: statement, change_links: false, outer_list: false %>
</ul>
