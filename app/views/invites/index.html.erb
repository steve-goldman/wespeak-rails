<% provide(:title, "Invitations") %>
<div class="row">
  <div class="col-md-offset-3 col-md-6 col-xs-12">
    <% if current_user.new_invitations.any? || current_user.old_invitations.any? %>
    <table class="table">
      <tbody>
        <% if current_user.new_invitations.any? %>
        <tr>
          <td colspan="2">
            <h4>New Invitations (<%= number_with_delimiter(current_user.new_invitations.count, delimiter: ",") %>)</h4>
          </td>
        </tr>
        <%= render 'invites', invitations: current_user.new_invitations %>
        <% end %>
        <% if current_user.old_invitations.any? %>
        <tr>
          <td colspan="2">
            <h4>Invitations (<%= number_with_delimiter(current_user.old_invitations.count, delimiter: ",") %>)</h4>
          </td>
        </tr>
        <%= render 'invites', invitations: current_user.old_invitations %>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
</div>
