<% provide(:title, "Password Reset") %>

<h2>Password Reset</h2>

<div class="row">
  <div class="col-md-offset-4 col-md-4 col-xs-12">
    <%= form_for(:password_reset, url: update_password_reset_path(@password_reset_token), method: :patch) do |f| %>
    
    <%= f.hidden_field :email, value: @email_address.email %>
    
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
    
    <%= f.label :password_confirmation, "Re-enter Password" %>
    <%= f.password_field :password_confirmation, placeholder: "Re-enter Password", class: "form-control" %>
    
    <%= f.submit "Update Password", class: "btn btn-primary" %>
    
    <% end %>
  </div>
</div>
